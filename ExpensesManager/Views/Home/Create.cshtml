@model Expense
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post">
    <table class="table">
        <tr>
            <td><label asp-for="Name"></label></td>
            <td> <input asp-for="Name" /></td>
            <td><span asp-validation-for="Name"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Category"></label></td>
            <td>
                <select asp-for="Category"
                        asp-items="@Html.GetEnumSelectList<CategoryType>()"> </select>
            </td>
            <td><span asp-validation-for="Category" ></span></td>
        </tr>
        <tr>
            <td><label asp-for="Amount"></label></td>
            <td> <input asp-for="Amount" /></td>
            <td><span asp-validation-for="Amount"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Date"></label></td>
            <td>@Html.TextBoxFor(x => x.Date, new { type = "date"})</td>
        </tr>
    </table>
        <input type="submit" value="Create" class="btn btn-warning" />
</form>

